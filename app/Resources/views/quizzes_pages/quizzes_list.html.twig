{% extends 'template.html.twig' %}

{% block title %}
    List of quizzes
{% endblock title %}

{% block body %}
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8" style="border: #0000F0 solid 2px">
                <div class="count">
                    <h3 style="color: black;">All quizzes - {{ pagination.getTotalItemCount }}</h3>
                </div>
                <div id="postlist">
                    {% for quiz in pagination %}
                        <div class="panel">
                            <div class="panel-heading">
                                <div class="text-center">
                                    <div class="row">
                                        <div class="col-sm-9">
                                            <h3 class="pull-left" style="color: black; font-family: 'Raleway', sans-serif;">{{ quiz.name }}</h3>
                                        </div>
                                        <div class="col-sm-3">
                                            <h4 class="pull-right">
                                                <small>{{ quiz.date_of_create | date('Y-m-d') }}</small>
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="panel-body">

                                <div style="width: 100%">
                                    {{ quiz.description }}
                                </div>
                                <div>
                                   Users passed -
                                    {% if quiz.users_amount == null %}
                                        0
                                    {% else %}
                                        {{ quiz.users_amount }}
                                    {% endif %}
                                </div>
                            </div>

                            <div class="panel-footer" style="height: 50px; padding-top: 6px">

                                {% if quiz.flag_passed %}
                                    <p class="pull-left" style="background-color: green; padding: 5px; margin-top: 0; color: white;"> Passed </p>
                                    <p class="pull-left" style="background-color: green; padding: 5px; margin-top: 0; color: white;"> Your result - {{ quiz.result }} </p>
                                    <a class="btn btn-default pull-right" href="{{ path('game_result', {'id_passage': quiz.id_passage}) }}">Result</a>
                                {% else %}
                                    <p class="pull-left" style="background-color: blue; padding: 5px; margin-top: 0; color: white;"> Not passed </p>
                                    <a class="btn btn-default pull-right" href="{{ path('game', {'id_quiz': quiz.id_quiz}) }}">Start</a>
                                {% endif %}

                            </div>
                        </div>

                    {% endfor %}
                </div>
            </div>

            <div class="col-md-2"></div>
        </div>


    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock body %}



