{% extends 'admin_control/admin_panel.html.twig' %}
{% block title %}
    List of Quizzes
{% endblock title %}

{% block contain %}

    <div id="grid_quizzes">
        <h4>Quizzes</h4>

    </div>

{% endblock contain %}

{% block javascripts %}
    <script src="{{ asset('assets/js/jquery.ajaxgrid.js') }}"></script>
<script>

    $('#grid_quizzes').ajaxgrid({
        ajax_url: '{{ (path('quiz_list_ajax')) }}',
        array_sorted_fields: ['ID', 'Name', 'Date of create', 'Description', 'Status'],
        array_field_filters: [['ID', 'Name', 'Date of create'], ['text', 'text', 'date']],
        notes_per_page: 4,
        filter_active: true,
        url_notes_edit: ['{{ (path('edit_quiz')) }}', 'ID'],
        url_notes_delete: ['{{ (path('delete_quiz')) }}', 'ID']
    });

</script>

{% endblock javascripts %}

{% block containstylesheets %}
    <style>
        #grid_quizzes {
            border: 2px solid grey;
            border-radius: 15px;
            background-color: #384452;
            padding: 5px;
            margin-bottom: 30px;
        }

        .filter {
            display: inline-block !important;
        }

        th {
            text-align: center !important;

        }

        td {
            min-width: 100px;
        }

        .sort_header {
            display: block;
        }

        .filters_panel {
            background-color: white;
            padding: 5px;
            border: 1px solid black;
            border-bottom: 0;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .date {
            display: block;
        }

        .add_filter {
            margin-top: 5px;
        }

        .table {
            margin-bottom: 0 !important;
            border: 1px solid gray;
        }

        .panel_pagination {
            display: block;
            padding: 5px;
            background-color: white;
            border: 1px solid black;
            border-top: 0;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
        }

        .current_page {
            width: 30px;
            padding-left: 5px;
            margin-left: 15px;
        }

        .view_page {
            margin-right: 15px;
        }


    </style>

{% endblock containstylesheets %}