{% extends 'template.html.twig' %}
{% block title %}
    List of Quizzes
{% endblock title %}

{% block body %}

    <div id="grid_quizzes">

    </div>


{% endblock body %}

{% block javascripts %}
    <script src="{{ asset('assets/js/jquery.ajaxgrid.js') }}"></script>
<script>
    $('#grid_quizzes').simplegrid({
        ajax_url: '{{ (path('question_list_ajax')) }}',
        array_headers: ['ID', 'Text'],
        array_field_filters: [['ID', 'Text', 'Answers'], ['text', 'text', 'text']],
        notes_per_page: 10,
        filter_active: false
    });
</script>

{% endblock javascripts %}

{% block stylesheets %}

    <style>

        th {
            text-align: center !important;
        }

        .sort_header {
            display: block;
        }

        .filters_panel {
            display: inline-block;
            background-color: white;
            padding: 5px;
            border: 1px solid black;
            border-bottom: 0;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .date {
            display: inline-block;
        }

        .add_filter {
            margin-top: 5px;
        }

        .table {
            margin-bottom: 0 !important;
            border: 1px solid gray;
        }

        .panel_pagination {
            display: inline-block;
            padding: 5px;
            background-color: white;
            border: 1px solid black;
            border-top: 0;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
        }

        .current_page {
            width: 30px;
            padding-left: 5px;
            margin-left: 15px;
        }

        .view_page {
            margin-right: 15px;
        }


    </style>

{% endblock stylesheets %}