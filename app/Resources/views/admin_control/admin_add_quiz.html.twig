{% extends 'template.html.twig' %}

{% block title %}
    Add new quiz
{% endblock title %}

{% block body %}



    <div class="col-md-4">
        {{ form_start(form) }}
        <h3>Parameters of Quiz</h3>
        <section class="registe-form">

            {{ form_row(form.name) }}
            <br>
            {{ form_row(form.description) }}
            {{ form_row(form.flag_active) }}
            {{ form_row(form.save) }}

        </section>
    </div>

    <div class="col-md-4">
        <h3>Questions</h3>
        <select class="js-example-basic-single" style="width: 250px">
            <option></option>
        </select>

        <ul class="questions nav" data-prototype="{{ form_widget(form.questions.vars.prototype)|e('html_attr') }}">
            {% for question in form.questions %}
                <li class="question">
                    {{ form_row(question.question_text) }}
                </li>
            {% endfor %}
        </ul>
        {{ form_end(form) }}
    </div>

    <div class="col-md-4">
    </div>



{% endblock body %}

{% block javascripts %}
    <script src="{{ asset('assets/js/select2.min.js') }}"></script>
    <script>

        var $collectionHolder;
        var $newLinkLi = $('<li></li>').append();

        jQuery(document).ready(function() {
            $collectionHolder = $('ul.questions');
            $collectionHolder.append($newLinkLi);
            $collectionHolder.find('li.question').each(function() {
                addTagFormDeleteLink($(this));
            });

            $collectionHolder.data('index', $collectionHolder.find(':input').length);

            var $select = $(".js-example-basic-single");
            $str = {{(json_questions|json_encode|raw)}};
            $result = JSON.parse($str);

            $select.select2({
                data: $result,
                placeholder: "Select a question"
            });

            $select.on('select2:select', function (e) {
                $text = e.params.data.text;
                $id = e.params.data.id;
                addTagForm($collectionHolder, $newLinkLi, $text, $id);
            });
        });

        function addTagForm($collectionHolder, $newLinkLi, $text_question, $id_question) {
            var prototype = $collectionHolder.data('prototype');
            var index = $collectionHolder.data('index');

            var newForm = prototype;
            newForm = newForm.replace(/__name__/g, index);
            $collectionHolder.data('index', index + 1);
            var $newFormLi = $('<li></li>').append(newForm);
            $newFormLi.find('.quiz_form_question_text').val($text_question);
            $newFormLi.find('.quiz_form_id_question').val($id_question);
            $newLinkLi.before($newFormLi);
            addTagFormDeleteLink($newFormLi);
        }

        function addTagFormDeleteLink($tagFormLi) {
            var $removeFormA = $('<a href="#" style="display: inline-block">delete this question</a>');
            $tagFormLi.append($removeFormA);
            $removeFormA.on('click', function(e) {
                e.preventDefault();

                // remove the li for the tag form
                $tagFormLi.remove();
            });
        }
    </script>

{% endblock javascripts %}

