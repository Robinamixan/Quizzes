{% extends 'template.html.twig' %}
{% form_theme form _self %}

{% block title %}
    Check Email
{% endblock title %}

{% block body %}
    <div class="col-md-4"></div>

    <div class="col-md-4">
        <section class="registe-form">
            <form class="form-signin" name='register_form' id='register_form' method='post' action='{{path('check')}}'>


                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder':'Email'}}) }}

                {{ form_errors(form.email, {'attr': {'class': 'text-danger'}}) }}

                {{ form_row(form._token) }}

                <button id="submitRegistration" class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
            </form>
        </section>
    </div>

    <div class="col-md-4"></div>

{% endblock body %}

{# form_errors.html.twig #}
{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <b style="color: red;">{{ error.message }}</b>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}